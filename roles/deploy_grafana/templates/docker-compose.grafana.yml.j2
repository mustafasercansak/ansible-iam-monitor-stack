version: '3.8'

services:
  grafana:
    image: grafana/grafana:main
    restart: unless-stopped
    ports:
      - "3000:3000"
    volumes:
      - {{ process_directory }}/data:/var/lib/grafana
      - {{ process_directory }}/provisioning:/etc/grafana/provisioning
      - {{ process_directory }}/conf/grafana.ini:/etc/grafana/grafana.ini
      - {{ process_directory }}/provisioning/ldap.toml:/etc/grafana/ldap.toml
    networks:
      - influxdb_net
    environment:
      GF_SECURITY_ADMIN_USER: "{{ grafana_admin_user }}"
      GF_SECURITY_ADMIN_PASSWORD: "{{ grafana_admin_password }}"
      GF_USERS_ALLOW_SIGN_UP: "false"
      GF_PATHS_PROVISIONING: "/etc/grafana/provisioning"

networks:
  influxdb_net:
    driver: bridge
